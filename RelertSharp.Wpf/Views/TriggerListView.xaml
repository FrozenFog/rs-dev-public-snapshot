<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelertSharp.Wpf.Views"
             xmlns:ViewModel="clr-namespace:RelertSharp.Wpf.ViewModel" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="RelertSharp.Wpf.Views.TriggerListView"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <ViewModel:GlobalTriggerVm/>
    </UserControl.DataContext>
    <Grid>
        <TreeView x:Name="trvMain" Margin="10,10,10,10" Style="{DynamicResource trvDark}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type ViewModel:TriggerTreeItemVm}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Title}" Style="{DynamicResource txblkDark}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
