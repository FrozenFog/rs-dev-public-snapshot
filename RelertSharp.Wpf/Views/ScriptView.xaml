<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelertSharp.Wpf.Views"
             xmlns:ViewModel="clr-namespace:RelertSharp.Wpf.ViewModel" x:Class="RelertSharp.Wpf.Views.ScriptView"
             mc:Ignorable="d" Height="194.4" Width="349.867">
    <UserControl.DataContext>
        <ViewModel:ScriptVm/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="46"/>
            <ColumnDefinition Width="*" MinWidth="46"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" HorizontalAlignment="Right" Margin="10,10,0,0" VerticalAlignment="Top" Style="{DynamicResource lblDark}"/>
        <TextBox Height="23" Margin="10,10,9.6,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Style="{DynamicResource txbDark}" Grid.ColumnSpan="2" Grid.Column="1"/>
        <ListBox Grid.ColumnSpan="3" Margin="10,38,9.6,10.2" Style="{DynamicResource lbxDark}" ItemsSource="{Binding Items}"/>
    </Grid>
</UserControl>
