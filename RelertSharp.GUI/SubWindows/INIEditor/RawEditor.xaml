<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelertSharp.SubWindows.INIEditor"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="RelertSharp.SubWindows.INIEditor.RawEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="Auto" Width="Auto"
    >
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Hidden">
        <avalonedit:TextEditor x:Name="rawEditor" FontSize="20" FontFamily="Fira Code" Background="Black" Foreground="White"
                               ShowLineNumbers="True" LineNumbersForeground="Aqua"/>
        <local:SearchBox x:Name="searchBox" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>

</UserControl>
