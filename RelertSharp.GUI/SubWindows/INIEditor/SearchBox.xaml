<UserControl x:Class="RelertSharp.SubWindows.INIEditor.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelertSharp.SubWindows.INIEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="30"  Width="260" MinWidth="260" MaxWidth="400">
    <Grid Background="#2D2D30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" MinWidth="230"/>
            <ColumnDefinition Width="30" MinWidth="30" MaxWidth="30"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txbContent" Grid.Column="0" FontSize="24" FontFamily="Fira Code"
                 Background="#3F3F46" Foreground="#F1F1F1" BorderThickness="1" BorderBrush="#434346"
                 />
        <Button x:Name="btnSearch" Background="Transparent" BorderThickness="0"  Margin="0,0,0,0" FontSize="15" Grid.Column="1"/>
        
    </Grid>
</UserControl>
